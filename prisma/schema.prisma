generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pedido {
  id      Int      @id @default(autoincrement())
  cliente String
  data    DateTime @default(now())
  tipo    String
  qtd     Int
  desc    String?
  status  String   @default("pendente")
  resumo  String?
  foto    String?  // URL da foto ou base64

  @@map("pedidos")
}

